{
  "name": "termlink",
  "version": "0.2.1",
  "description": "Provide an ontology via Terminology Service's API link.",
  "url": "https://github.com/lifeomic/termlink",
  "repository": "git@bitbucket.org:lifeomic/termlink.git",
  "author": "Taylor Steinberg <taylor.steinberg@lifeomic.com>",
  "license": "MIT",
  "scripts": {
    "build": "docker build --tag lifeomic/termlink:$npm_package_version .",
    "prelint": "yarn build",
    "lint": "docker run lifeomic/termlink:$npm_package_version make lint",
    "pretest": "yarn lint",
    "test": "docker run lifeomic/termlink:$npm_package_version make test",
    "prepackage": "yarn build",
    "package": "docker run lifeomic/termlink:$npm_package_version make package",
    "predeploy": "yarn version && yarn build && make package",
    "deploy": "make deploy && docker push lifeomic/termlink:$npm_package_version"
  }
}
